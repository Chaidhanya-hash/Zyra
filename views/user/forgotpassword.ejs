

<div class="font-sans bg-gray-50 text-gray-800">

    <!-- Header -->
    <%- include('header') %>

    <!-- Main Content -->
    <main class="flex flex-col items-center justify-center min-h-screen py-8">
        <div>
            
            <h2 class="text-green-700 font-medium">It's perfectly fine. Enter your email address to reset your password.</h2>
        </div>
        <div class="bg-[#F4E3D3] rounded-lg shadow-lg p-8 w-full max-w-md gap-16">
            <h2 class="text-2xl font-semibold text-center mb-6">Reset Password</h2>
            <form action="/forgotpassword" method="POST" id="forget-form">
                <div class="mb-6">
                    <label for="email" class="block mb-2 text-gray-700">Enter your Email</label>
                    <input name="email" id="email" placeholder="Enter your email"
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-pink-500">
                </div>
                <button type="submit"
                    class="w-full bg-black text-white py-2 rounded-md hover:bg-gray-800 transition" id="forget-btn">Send OTP</button>
            </form>
        </div>
    </main>

    <!-- Footer -->
    <%- include('footer') %>

</div>

<script>
    function validateEmail(email) {
        const re = /\S+@\S+\.\S+/;
        return re.test(email);
    }
    const forgetPasswordForm = document.getElementById('forget-form');
    const emailInput = document.getElementsByName('email')[0];
    const forgetPasswordButton=document.getElementById('forget-btn')

    forgetPasswordForm.addEventListener('submit', (e) => {
        e.preventDefault();
        if (!validateEmail(emailInput.value)) {
            Swal.fire({
                title: "Invalid Email",
                text: "Please enter a valid email address.",
                icon: "error"
            });
        } else {
            forgetPasswordForm.submit();
        }
    });
</script>

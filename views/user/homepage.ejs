

<div class="bg-white font-sans">

  <%- include ('header') %>
  <%- include('alert') %>
    <!-- Main Hero Section -->
    <section class="hero-section relative bg-cover bg-center">
      <div class="overlay absolute inset-0"></div>
      <div class="relative flex items-end justify-end h-full text-white p-4">
        <h1 class="jim-nightshade-regular text-3xl text-right  italic custom-shadow">
          Unlock your natural glow
        </h1>


      </div>
    </section>

    <div class="relative">
      <section class="bg-white py-12">
          <div class="container mx-auto px-6">
              <!-- Section Heading -->
              <h2 class="kurale-regular text-3xl  text-center text-gray-800 mb-10">
                  Our Products
              </h2>
              
              <!-- Product Grid -->
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                  <% product.forEach((product) => { %>
                      <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                          <!-- Product Image -->
                          <a href="/productDetail/<%- product.id %>">
                              <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>" 
                                  class="w-full h-48 object-contain ">
                          </a>
                          
                          <!-- Product Details -->
                          <div class="p-6">
                              <!-- Product Name -->
                              <h3 class="amethysta-regular text-lg font-medium text-center text-gray-900 mb-2">
                                  <%= product.productName %>
                              </h3>
                              
                              <!-- Product Description -->
                              <p class="text-gray-600 text-sm text-center mb-4">
                                  <%= product.productDescription %>
                              </p>
                              
                              <!-- Product Price and Actions -->
                              <div class="flex justify-between items-center">
                                  <!-- Price -->
                                  <span class="text-lg font-bold text-gray-900">
                                      â‚¹<%= product.productPrice %>
                                  </span>
                                  
                                  <!-- Actions -->
                                  <div class="flex items-center space-x-4">
                                      <!-- Cart Icon -->
                                      <a onclick="addToCart('<%= product.id %>', '<%= product.productPrice %>','<%= user %>')">
                                          <img src="https://cdn-icons-png.flaticon.com/512/34/34568.png" alt="Cart Icon"
                                              class="h-6 w-6 cursor-pointer hover:scale-110 transition-transform" />
                                      </a>
                                      
                                      <!-- Heart Icon -->
                <% if (user && wishlist && Array.isArray(wishlist.products) && wishlist.products.some(wishlistProduct => 
                wishlistProduct.productID.toString() === product._id.toString())) { %>
                  <a onclick="addwishlist('<%= product._id %>', '<%= product.productPrice %>', '<%= user %>')"
                  class="text-gray-500 hover:text-red-500">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6 cursor-pointer hover:scale-110 transition-transform"
                      viewBox="0 0 24 24"
                      fill="red"
                    >
                      <path
                        d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                      />
                    </svg>

                  </a>
              <% } else { %>
                <a onclick="addwishlist('<%= product._id %>', '<%= product.productPrice %>', '<%= user %>')"
                class="text-gray-500 hover:text-red-500">
                  <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6 cursor-pointer hover:scale-110 transition-transform stroke-current stroke-2"
                      viewBox="0 0 24 24"
                      fill="white"
                    >
                      <path
                        d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                      />
                    </svg>
                </a>
                <% } %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  <% }) %>
              </div>
          </div>
      </section>
      
      <!-- Show All Products Button -->
      <a href="/allproduct" class="absolute bottom-1 right-10  text-blue-800  py-2 px-4 hover:underline transition-colors">
        Show All Products
    </a>
  </div>
  
    


    
<!-- Brands Section -->
<section class="px-8 py-10 mx-auto bg-gray-50">
  <h2 class="kurale-regular text-3xl text-center mb-8">Our Brands</h2>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 max-w-6xl mx-auto">
      <% brand.forEach(brand => { %>
          <a href="/brand-product/<%= brand._id %>" class="brand-logo-container transform hover:scale-105 transition-transform duration-300 cursor-pointer">
              <div class="brand-circle flex items-center justify-center h-24 w-24 mx-auto rounded-full bg-gradient-to-r from-pink-100 to-violet-100 shadow-lg hover:shadow-xl transition-shadow">
                  <div class="brand-inner w-20 h-20 rounded-full bg-white flex items-center justify-center p-2">
                      <span class="text-center font-semibold text-gray-800 text-sm leading-tight">
                          <%= brand.brandName %>
                      </span>
                  </div>
              </div>
          </a>
      <% }) %>
  </div>
</section>
    <!-- Responsive Card Section -->
    <div class="bg-black p-6 rounded-lg max-w-3xl mx-auto mb-8">
      <div class="text-center">
        <h2 class="text-lg md:text-xl font-medium text-gray-500">
          When the sun shines, we'll shine together
        </h2>
        <p class="text-sm md:text-base text-gray-600 mt-2">
          Stay up to date with our latest launches and offers!
        </p>
      </div>
      <div class="flex flex-col md:flex-row justify-center items-center mt-6 space-y-4 md:space-y-0 md:space-x-10">
        <!-- Free Delivery -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 3h18M3 3v6h18V3M3 9l2 9h14l2-9H3z" />
          </svg>

          <p class="text-sm md:text-base">Free delivery</p>
        </div>

        <!-- Best Products -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.91 1.18 6.91L12 17.77l-6.18 3.32L7 14.18 2 9.27l6.91-1.01L12 2z" />
          </svg>
          <p class="text-sm md:text-base">Only the best products</p>
        </div>

        <!-- Easy Returns -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path
              d="M12 2L1 6v12l11 4 11-4V6zM6.54 16.94l.7-3.93h3.11l.7 3.93L12 14.93l1.25 2.01.7-3.93h3.11l.7 3.93L20.06 12H16V8h-2v4H8V8H6v4H1.94z" />
          </svg>
          <p class="text-sm md:text-base">Easy returns</p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include ('footer') %>
  </div>

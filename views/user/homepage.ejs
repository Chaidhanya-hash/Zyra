

<div class="bg-white font-sans">

  <%- include ('header') %>
  <%- include('alert') %>
    <!-- Main Hero Section -->
    <section class="hero-section relative bg-cover bg-center">
      <div class="overlay absolute inset-0"></div>
      <div class="relative flex items-end justify-end h-full text-white p-4">
        <h1 class="jim-nightshade-regular text-3xl text-right  italic custom-shadow">
          Unlock your natural glow
        </h1>


      </div>
    </section>

  <div class="relative">
    <section class="bg-white py-10">
      <div class="container mx-auto px-6">
          <h2 class="kurale-regular text-2xl text-center mb-6">Our Products</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
              <% product.forEach((product) => { %>
                  <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4">
                      <!-- Product Image -->
                      <a href="/productDetail/<%- product.id %>">
                        <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>" class="w-full h-48 object-contain">
                      </a>
                      
                      
                      <!-- Product Details -->
                      <div class="p-4">
                          <!-- Product Name -->
                          <h3 class="amethysta-regular text-lg text-center mb-2">
                              <%= product.productName %>
                          </h3>
                          
                          <!-- Product Description -->
                          <p class="text-gray-600 text-sm mb-4 text-center">
                              <%= product.productDescription %>
                          </p>
                          
                          <!-- Product Price and Heart Icon -->
                          <div class="flex justify-between items-center">
                              <span class="text-lg font-bold text-gray-800">
                                  â‚¹<%= product.productPrice %>
                              </span>
                              <div>
                              <!-- Cart Icon -->
                              <a onclick="addToCart('<%= product.id %>', '<%= product.productPrice %>','<%= user %>')">
                                <img src="https://cdn-icons-png.flaticon.com/512/34/34568.png" alt="Cart Icon"
                                class="h-6 w-6 cursor-pointer" />
                              </a>
                              </div>
                              <div>
                              <!-- Heart Icon -->
                              <a class="text-gray-500 hover:text-red-500">
                                <img src="/styles/images/free-heart-icon-3510-thumb.png" alt="Heart Icon"
                                class="h-6 w-6 cursor-pointer " />
                              </a>
                            </div>
                          </div>
                      </div>
                  </div>
              <% }) %>
          </div>
      </div>
      
  </section>
  <!-- Show All Products Button -->
 <a href="/allproduct" class="absolute bottom-1 right-10  text-blue-800  py-2 px-4 hover:underline transition-colors">
      Show All Products
  </a>
</div>
    

    <!-- Brands Section -->
    <section class="px-8 py-10 mx-auto">
      <h2 class="kurale-regular text-2xl text-center mb-6">Brands</h2>
      <div class="flex flex-wrap justify-center gap-16">
        <img src="styles/images/aqualogica_logo.jpeg" alt="Brand Logo 1" class="w-20">
        <img src="styles/images/plum_logo.webp" alt="Brand Logo 2" class="w-20">
        <img src="styles/images/Mamaearth_logo.jpeg" alt="Brand Logo 3" class="w-20">
        <img src="styles/images/ponds_logo.png" alt="Brand Logo 4" class="w-20">
        <img src="styles/images/Biotique_logo.jpeg" alt="Brand Logo 4" class="w-20">
        <img src="styles/images/Lotus_logo.webp" alt="Brand Logo 4" class="w-20">
      </div>
    </section>
    <!-- Responsive Card Section -->
    <div class="bg-[#F2DFD0] p-6 rounded-lg max-w-3xl mx-auto mb-8">
      <div class="text-center">
        <h2 class="text-lg md:text-xl font-medium text-gray-800">
          When the sun shines, we'll shine together
        </h2>
        <p class="text-sm md:text-base text-gray-600 mt-2">
          Stay up to date with our latest launches and offers!
        </p>
      </div>
      <div class="flex flex-col md:flex-row justify-center items-center mt-6 space-y-4 md:space-y-0 md:space-x-10">
        <!-- Free Delivery -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 3h18M3 3v6h18V3M3 9l2 9h14l2-9H3z" />
          </svg>

          <p class="text-sm md:text-base">Free delivery</p>
        </div>

        <!-- Best Products -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.91 1.18 6.91L12 17.77l-6.18 3.32L7 14.18 2 9.27l6.91-1.01L12 2z" />
          </svg>
          <p class="text-sm md:text-base">Only the best products</p>
        </div>

        <!-- Easy Returns -->
        <div class="flex flex-col items-center text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <path
              d="M12 2L1 6v12l11 4 11-4V6zM6.54 16.94l.7-3.93h3.11l.7 3.93L12 14.93l1.25 2.01.7-3.93h3.11l.7 3.93L20.06 12H16V8h-2v4H8V8H6v4H1.94z" />
          </svg>
          <p class="text-sm md:text-base">Easy returns</p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include ('footer') %>
  </div>

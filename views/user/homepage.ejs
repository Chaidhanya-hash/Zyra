    <section class="hero-section relative bg-cover bg-center">
      <div class="overlay absolute inset-0"></div>
      <div class="relative flex items-end justify-end h-full text-white p-4">
        <h1 class="jim-nightshade-regular text-3xl text-right  italic custom-shadow">
          Unlock your natural glow
        </h1>


      </div>
    </section>


    <!-- Top Selling Brands Section -->
    <section class="px-8 py-10">
      <h2 class="kurale-regular text-2xl text-center mb-6">Top Selling Brands</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="brand-card bg-white shadow-md rounded-lg p-6 text-center ">
          <img src="/styles/images/plum.png" alt="Brand 1" class="w-24 h-20 mx-auto mb-4">



<div class="fixed inset-0 z-50 flex justify-center items-center bg-black bg-opacity-50" id="editModal">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-lg">
        <div class="px-6 py-4 border-b flex justify-between items-center">
            <h2 class="text-xl font-semibold">Edit Address</h2>
            <a href="/profile">
                <button type="button" class="text-gray-500 hover:text-black" >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </a>
            
        </div>
        <form method="post" id="editaddress" action="/update-address/<%= index %>" class="px-6 py-4">
            <div class="space-y-4">
                <div>
                    <label for="building" class="block text-sm font-medium text-gray-700">Flat, House no., Building, Company, Apartment</label>
                    <input type="text" name="building" id="building" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.building %>" required>
                </div>

                <div>
                    <label for="street" class="block text-sm font-medium text-gray-700">Area, Street, Sector, Village</label>
                    <input type="text" name="street" id="street" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.street %>" required>
                </div>

                <div>
                    <label for="city" class="block text-sm font-medium text-gray-700">Town/City</label>
                    <input type="text" name="city" id="city" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.city %>" required>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="phonenumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                        <input type="text" name="phonenumber" id="phonenumber" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.phonenumber %>" required>
                    </div>
                    <div>
                        <label for="pincode" class="block text-sm font-medium text-gray-700">Pincode</label>
                        <input type="text" name="pincode" id="pincode" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.pincode %>" required>
                    </div>
                </div>

                <div>
                    <label for="landmark" class="block text-sm font-medium text-gray-700">Land Mark</label>
                    <input type="text" name="landmark" id="landmark" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.landmark %>" required>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="state" class="block text-sm font-medium text-gray-700">State</label>
                        <input type="text" name="state" id="state" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.state %>" required>
                    </div>
                    <div>
                        <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
                        <input type="text" name="country" id="country" class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" value="<%= data.country %>" required>
                    </div>
                </div>
            </div>

            <div class="mt-4 flex justify-end space-x-4">
                <a href="/profile">
                <button type="button" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">Close</button>

                </a>
                <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Update</button>
            </div>
        </form>
    </div>
</div>




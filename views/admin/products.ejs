<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>

<div class=" min-h-screen flex flex-col">

    <!-- Header -->
    <%- include('header') %>
    <%- include('alert') %>
    <!-- Main Content -->
    <div class="flex flex-grow">
        <!-- Sidebar -->
        <aside class="bg-gradient-to-r from-gray-200 to-gray-600 text-black h-screen w-64 lg:w-72 fixed top-0 left-0 py-6 px-5 shadow-lg transition-transform transform lg:translate-x-0 -translate-x-full lg:static z-50" 
       id="adminSidebar">
    <!-- Logo -->
    <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold tracking-wide">Admin Panel</h2>
        <button class="lg:hidden text-white text-2xl focus:outline-none" onclick="toggleSidebar()">×</button>
    </div>

    <!-- Navigation -->
    <nav class="space-y-4">
        <!-- Dashboard -->
        <a href="/admin/dashboard" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Dashboard</span>
        </a>

        <!-- Products -->
        <a href="/admin/products" class="flex items-center space-x-4 py-3 px-4 rounded-lg bg-white text-[#4A148C] shadow-md hover:bg-gray-200 transition">
            <span class="text-sm font-medium">Products</span>
        </a>

        <!-- Category -->
        <a href="/admin/category" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Category</span>
        </a>

        <!-- Customers -->
        <a href="/admin/customers" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Customers</span>
        </a>

        <!-- Orders -->
        <a href="/admin/orders" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Orders</span>
        </a>

        <!-- Coupons -->
        <a href="#" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Coupons</span>
        </a>

        <!-- Banner -->
        <a href="#" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Banner</span>
        </a>

        <!-- Logout -->
        <a href="/admin/logout" class="flex items-center space-x-4 py-3 px-4 rounded-lg hover:bg-white hover:text-[#4A148C] transition">
            <span class="text-sm font-medium">Logout</span>
        </a>
    </nav>
</aside>

        <!-- Products Section -->
        <main class="flex-1 p-6 bg-gray-100 min-h-screen">
            <!-- Header Section -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-semibold text-gray-700">Products</h2>
                <div class="flex items-center space-x-4">
                    <a href="/admin/addproduct">
                        <button class="bg-gradient-to-r from-orange-500 to-red-500 text-white px-4 py-2 rounded-lg shadow-md hover:opacity-90 transition">
                            Add Product
                        </button>
                    </a>
                    <form action="/admin/products" method="get" class="flex items-center gap-2">
                        <input type="text" name="search" placeholder="Search" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-purple-400 transition" />
                        <input type="submit" value="Search" class="bg-red-500 text-white px-4 py-2 rounded-lg cursor-pointer hover:opacity-90 transition" />
                    </form>
                </div>
            </div>
        
            <!-- Products Table -->
            <div class="bg-white rounded-lg shadow-lg overflow-x-auto">
                <table class="w-full text-left text-sm border-collapse">
                    <!-- Table Head -->
                    <thead class="bg-gradient-to-r from-gray-200 to-gray-600 text-black">
                        <tr>
                            <th class="py-4 px-5 text-center">SL.No</th>
                            <th class="py-4 px-5 text-center">Product</th>
                            <th class="py-4 px-5 text-center">Price</th>
                            <th class="py-4 px-5 text-center">Stock</th>
                            <th class="py-4 px-5 text-center">Category</th>
                            <th class="py-4 px-5 text-center">Status</th>
                            <th class="py-4 px-5 text-center">Action</th>
                        </tr>
                    </thead>
                    <!-- Table Body -->
                    <tbody class="bg-gray-50">
                        <% let slNo = (currentPage - 1) * limit + 1; %>
                        <% products.forEach((product, index) => { %>
                            <tr class="border-b hover:bg-gray-100 transition">
                                <td class="py-4 px-5 text-center text-gray-700"><%= index + 1 + ((page - 1) * 8) %></td>
                                <td class="py-4 px-5 text-center text-gray-700"><%= product.productName %></td>
                                <td class="py-4 px-5 text-center text-gray-700">₹<%= product.productPrice %></td>
                                <td class="py-4 px-5 text-center text-gray-700"><%= product.productQuantity %></td>
                                <td class="py-4 px-5 text-center text-gray-700"><%= product.productCategory %></td>
                                <td class="py-4 px-5 text-center">
                                    <% if (product.isActive) { %>
                                        <span class="px-3 py-1 text-sm font-medium text-green-700 bg-green-100 rounded-full">Listed</span>
                                    <% } else { %>
                                        <span class="px-3 py-1 text-sm font-medium text-red-700 bg-red-100 rounded-full">Unlisted</span>
                                    <% } %>
                                </td>
                                <td class="py-4 px-5 flex justify-center gap-4 text-lg">
                                    <a href="/admin/editproduct/<%= product.id %>" class="text-blue-600 hover:text-blue-800 transition">✏️</a>
                                    <a href="/admin/productstatus?id=<%= product.id %>&status=<%= product.isActive %>" class="text-yellow-500 hover:text-yellow-700 transition">⚫</a>
                                    <a href="/admin/products/<%= product.id %>" class="sweet-alert-delete text-red-600 hover:text-red-800 transition">❌</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        
            <!-- Pagination Controls -->
            <div class="flex justify-center mt-6">
                <ul class="flex items-center space-x-2">
                    <% if (currentPage > 1) { %>
                        <li>
                            <a href="/admin/products?page=<%= currentPage - 1 %>&limit=<%= limit %>&search=<%= search %>"
                               class="px-3 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition"><<</a>
                        </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li>
                            <a href="/admin/products?page=<%= i %>&limit=<%= limit %>&search=<%= search %>"
                               class="px-3 py-2 rounded-md
                                    <%= currentPage == i ? 'bg-orange-500 text-white' : 'bg-gray-300 text-gray-700 hover:bg-gray-400' %> transition">
                               <%= i %>
                            </a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li>
                            <a href="/admin/products?page=<%= currentPage + 1 %>&limit=<%= limit %>&search=<%= search %>"
                               class="px-3 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition">>></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </main>
        
    </div>
    <!-- Footer -->
    <%- include('footer') %>

</div>

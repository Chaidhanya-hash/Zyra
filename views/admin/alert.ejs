<% if (success.length >0) { %>
    <div class="alert-container mb-4">
        <div class="flex items-center justify-between p-4 bg-green-100 border border-green-400 rounded text-green-700">
            <h5 class="font-semibold">
                <%= success %>
            </h5>
            <button 
                class="text-green-700 hover:text-green-900 transition duration-200"
                onclick="this.parentElement.parentElement.remove()">
                ✕
            </button>
        </div>
    </div>
<% } %>

<% if (error.length >0) { %>
    <div class="alert-container mb-4">
        <div class="flex items-center justify-between p-4 bg-red-100 border border-red-400 rounded text-red-700">
            <h5 class="font-semibold">
                <%= error %>
            </h5>
            <button 
                class="text-red-700 hover:text-red-900 transition duration-200"
                onclick="this.parentElement.parentElement.remove()">
                ✕
            </button>
        </div>
    </div>
<% } %>

<!-- -------------------------after 5 sec flash will disable-------------------- -->

<script>
    const alertDuration = 5000;
    setTimeout(() => {
        document.getElementsByClassName('alert-container')[0].style.display = 'none';
    },alertDuration)
</script>